<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
    </style>

    <!-- Custom style for BottomNavigationView -->
    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconSize">20dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.Inactive</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
    </style>

    <!-- Text appearance for active items -->
    <style name="BottomNavigationView.Active" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Text appearance for inactive items -->
    <style name="BottomNavigationView.Inactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
